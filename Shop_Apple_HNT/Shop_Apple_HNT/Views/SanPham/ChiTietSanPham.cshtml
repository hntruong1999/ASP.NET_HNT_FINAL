@model Shop_Apple_HNT.Models.SanPhamModel

@{
    ViewData["Title"] = Model.Ten;
    Layout = "_ProductLayout";
}

<!-- NÚT QUAY VỀ TRANG CHỦ -->
<div style="margin-bottom:20px">
    <a asp-controller="Home"
       asp-action="Index"
       class="btn btn-default"
       style="
           border-radius:20px;
           padding:8px 18px;
           background:#f5f5f7;
           border:1px solid #d2d2d7;
           font-weight:500;">
        ← Quay về trang chủ
    </a>
</div>

<div class="row">
    <!-- SIDEBAR -->
    <div class="col-sm-3">
        @Html.Partial("_SidebarPartal")
    </div>

    <!-- CONTENT -->
    <div class="col-sm-9 padding-right">
        @Html.Partial("_ProductDetailPartial", Model)
    </div>
</div>
